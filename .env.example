# --- DATABASE (Supabase) ---
# Connect to Supabase via connection pooling (Transaction Mode)
# Used for queries in the app (Prisma Client)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection to the database (Session Mode)
# Used for migrations (prisma migrate/db push) to bypass the pooler
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# --- AUTHENTICATION (NextAuth) ---
# Your site URL (localhost for dev, https://... for prod)
NEXTAUTH_URL="http://localhost:3000"

# Secret used to encrypt session tokens
AUTH_SECRET="dummy_secret_replace_with_openssl_rand_base64_32"

# --- SUPABASE CLIENT (Frontend) ---
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="dummy_anon_key"

# --- ANALYTICS (PostHog) ---
NEXT_PUBLIC_POSTHOG_KEY="phc_dummy_public_key"
NEXT_PUBLIC_POSTHOG_HOST="https://us.i.posthog.com"
POSTHOG_PROJECT_ID="12345"

# ⚠️ PRIVATE ADMIN KEY - NEVER COMMIT THE REAL VALUE
POSTHOG_PERSONAL_API_KEY="phx_dummy_personal_key"